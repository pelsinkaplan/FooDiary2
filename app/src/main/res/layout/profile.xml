<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img2"
    tools:showIn="@layout/profile_app_bar">

    <TextView
        android:id="@+id/editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/profile"
        android:textColor="@android:color/background_light"
        android:textSize="28sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/imagePro"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ppicon" />

    <TextView
        android:id="@+id/emailPro"
        android:layout_width="336dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imagePro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/divider_horizontal_dark"
        android:text="email@email.com"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/namePro"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/imagePro"
        android:layout_alignTop="@id/imagePro"
        android:layout_marginStart="160dp"
        android:layout_marginTop="25dp"
        android:hint="Ä°sim"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/notifications"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignStart="@id/emailPro"
        android:layout_alignTop="@id/emailPro"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:hint="@string/notifications"
        android:textAlignment="viewStart"
        android:textColor="?android:attr/textColorSecondaryInverse"
        android:textColorHint="@android:color/primary_text_dark"
        android:textSize="16sp"
        android:typeface="monospace" />

    <ScrollView
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:layout_below="@+id/notifications"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:id="@+id/notification_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/surnamePro"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/imagePro"
        android:layout_alignTop="@id/namePro"
        android:layout_marginStart="160dp"
        android:layout_marginTop="55dp"
        android:hint="Soyad"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/edit"
        android:layout_width="29dp"
        android:layout_height="31dp"
        android:layout_alignEnd="@id/namePro"
        android:layout_alignBottom="@id/editProfile"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="-75dp"
        android:background="@android:drawable/ic_menu_edit" />

</RelativeLayout>