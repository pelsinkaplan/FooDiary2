<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img2"
    tools:context=".Panel.LoginPanel">

    <EditText
        android:id="@+id/oldPassword"
        android:layout_width="287dp"
        android:layout_height="40dp"
        android:layout_alignStart="@id/emailPro"
        android:layout_alignTop="@id/emailPro"
        android:layout_marginTop="50dp"
        android:background="@android:drawable/gallery_thumb"
        android:hint="@string/oldPassword"
        android:textAlignment="viewStart"
        android:textColor="?android:attr/textColorSecondaryInverse"
        android:textColorHint="@android:color/primary_text_dark"
        android:textSize="13sp"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="287dp"
        android:layout_height="40dp"
        android:layout_alignStart="@id/emailPro"
        android:layout_alignTop="@id/oldPassword"
        android:layout_marginTop="60dp"
        android:background="@android:drawable/gallery_thumb"
        android:hint="@string/newPassword"
        android:textAlignment="viewStart"
        android:textColor="?android:attr/textColorSecondaryInverse"
        android:textColorHint="@android:color/primary_text_dark"
        android:textSize="13sp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/editProfile"
        android:textColor="@android:color/background_light"
        android:textSize="28sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back" />

    <ImageButton
        android:id="@+id/logo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignTop="@id/back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ppicon" />

    <TextView
        android:id="@+id/emailPro"
        android:layout_width="336dp"
        android:layout_height="30dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="38dp"
        android:background="@android:drawable/divider_horizontal_dark"
        android:text="@string/email2"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/namePro"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_alignTop="@id/logo"
        android:layout_alignStart="@id/logo"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/gallery_thumb"
        android:hint="@string/name2"
        android:textAlignment="viewStart"
        android:textColor="?android:attr/textColorSecondaryInverse"
        android:textColorHint="@android:color/primary_text_dark"
        android:textSize="13sp"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/surnamePro"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_alignTop="@id/namePro"
        android:layout_alignStart="@id/logo"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"
        android:background="@android:drawable/gallery_thumb"
        android:hint="@string/surname2"
        android:textAlignment="viewStart"
        android:textColor="?android:attr/textColorSecondaryInverse"
        android:textColorHint="@android:color/primary_text_dark"
        android:textSize="13sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/save"
        android:layout_width="66dp"
        android:layout_height="27dp"
        android:layout_alignTop="@id/newPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:background="@android:color/holo_green_dark"
        android:text="@string/save"
        android:typeface="monospace" />


</RelativeLayout>